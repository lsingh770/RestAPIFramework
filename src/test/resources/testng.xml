<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="RestAPI Test Suite" parallel="classes" thread-count="3" preserve-order="true">

    <test name="User Module Tests">
        <classes>
            <class name="com.api.tests.UserModuleTests"/>
        </classes>
    </test>

    <test name="Product Module Tests">
        <classes>
            <class name="com.api.tests.ProductModuleTests"/>
        </classes>
    </test>

    <test name="Order Module Tests">
        <classes>
            <class name="com.api.tests.OrderModuleTests"/>
        </classes>
    </test>

    <test name="General API Test">
        <classes>
            <class name="com.api.tests.APITests"/>
        </classes>
    </test>

</suite>
